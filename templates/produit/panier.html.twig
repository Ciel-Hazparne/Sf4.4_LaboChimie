{% extends 'base.html.twig' %}
{% block title %}
    Panier
{% endblock %}
{% block body %}
    <div class="container mt-3">

        {% if produits|length >0 %}
            <h1>Votre panier</h1>

            <table class="table table-hover">
                <thead>
                <tr>
                    <th scope="col">Produit</th>
                    <th scope="col">quantite actuelle</th>
                    <th scope="col">quantite</th>
                    <th scope="col">Action</th>
                </tr>
                </thead>
                <tbody>
                {% for produit in produits %}
                    <tr class="table-active">
                        <th scope="row">{{ produit.produit.formule }}</th>
                        <td>{{ produit.produit.quantite }}</td>
                        <td>{{ produit.quantity }}
                            {# <form action="" method="post"> #}
                            {# <div class="form-group"> #}
                            {# <input type="number" class="form-control" id="produit_produit_quantite" name="produit[quantite]"> #}
                            {# </div> #}
                            {# </form> #}
                        </td>
                        <td>
                            <a href="{{ path('admindelete_produit', {'id': produit.produit.id}) }}"
                               class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
            <h1>panier vide</h1>
        {% endif %}
        <a href="{{ path('export') }}">
            <button type="button" class="btn btn-primary">Export au format excel</button>
        </a>
        <a href="{{ path('show_produits') }}">
            <button type="button" class="btn btn-secondary">Retour &agrave; la liste</button>
        </a>

    </div>
{% endblock %}



