{% extends 'base.html.twig' %}
{% block title %}Upload{% endblock %}
{% block body %}
    <div class="container mt-3">
        {{ form_start(form) }}
        <div class="alert alert-dismissible alert-info">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <p>Téléchargez un fichier Excel (.xlsx).</p>
            <p>Format: colonne A : id, colonne B : Quantite</p>
        </div>
        <div class="row">
            <div class="form-group">
                {{ form_errors(form.file) }}
                {{ form_row(form.file) }}
            </div>
        </div>
        {{ form_rest(form) }}
        <button class="btn btn-success">{{ button|default('Enregistrer') }}</button>
        {{ form_end(form) }}
    </div>
{% endblock %}