{% extends 'base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
    <div class="container">
        <table class="table table-hover mt-5">
            <thead>
            <tr>
                <th scope="col">Prénom</th>
                <th scope="col">Nom</th>
                <th scope="col">Email</th>
                <th scope="col">Dernière connexion</th>
                <th scope="col">Validate</th>
                <th scope="col">Action</th>
            </tr>
            </thead>

            <tbody>
            {% for user in users %}
                <tr>
                    <td class="text-success">{{ user.prenom|capitalize }}</td>
                    <td class="text-success">{{ user.nom|upper}}</td>
                    <td class="text-success">{{ user.email }}</td>
                    <td class="text-success">{{ user.lastLogin|date("m/d/Y à H:i:s") }}</td>
                    {% if  user.validate==false %}
                        <td style="color: #dc3545">Pas autoris&eacute;</td>
                    {% else %}
                        <td style="color:lawngreen">Autoris&eacute;</td>
                    {% endif %}
                    <td>
                        <a href="{{ path('account_delete', {'id': user.id}) }}"
                           class="btn btn-danger btn-sm"
                           onclick="return confirm('Etes vous sûr(e) de vouloir supprimer cet utilisateur')">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a href={{ path('account_register') }}>
        <button type="button" class="btn btn-primary mt-5" >Ajouter un enseignant</button>
        </a>
    </div>

{% endblock %}
