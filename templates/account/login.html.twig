{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 style="text-align: center">Se connecter</h1>
        <div class="row">
            <div class="col-md-3">&nbsp;</div>
            <div class="col-md-6">
                <div class="bg-dark py-3 px-3">
                    {% if haserror %}
                        <div class="btn btn-danger">
                            Une erreur est survenue,vos identifiants sont incorrects
                        </div>
                    {% endif %}
                    <form action="{{ path('account_login') }}" method="post">
                        <div class="form-group">
                            <label for="email" class="text-dark">Email</label>
                            <input type="text" name="_username" id="email" class="form-control"
                                   placeholder="Adresse email" value="{{ username }}" required>
                        </div>
                        <div class="form-group">
                            <label for="password" class="text-dark">Mot de passe</label>
                            <input type="password" name="_password" id="password" class="form-control"
                                   placeholder="mot de passe" required>
                        </div>
                        <div class="checkbox mb-3">
                            <input type="checkbox" id="remember_me" name="_remember_me" checked/>
                            <label for="remember_me">Se souvenir de moi</label>
                            <table class="table table-sm bg-light">
                                <thead>
                                <tr>
                                    <th scope="col">email</th>
                                    <th scope="col">mdp</th>

                                </tr>
                                </thead>
                                <tbody>
                                <tr >
                                    <th >admin@snir.eh</th>
                                    <td>admin</td>
                                </tr>
                                <tr>
                                    <th >prof@snir.eh</th>
                                    <td>admin</td>
                                </tr>
                                </tbody>
                            </table>
                        </div><div class="form-group">
                            <button type="submit" class="btn btn-success"> connexion</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
